#!/bin/bash

if [ -z "${APPIMAGE}" ]; then
    export ARGV0="$0"
    export APPDIR=$(dirname $(readlink -f -- "$0"))
fi

export PATH="${APPDIR}/opt/python3.9/bin":"${APPDIR}/usr/bin":$PATH
export PYTHONPATH="${APPDIR}/opt/python3.9/lib/python3.9/site-packages":$PYTHONPATH
export SSL_CERT_FILE="${APPDIR}/opt/_internal/certs.pem"

"$APPDIR/opt/python3.9/bin/python3.9" "${APPDIR}/opt/python3.9/bin/levior" "$@"
